#!/bin/bash

# Extract data using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
WEIGHT=$(jq -r '.weight' data.json)
HEIGHT=$(jq -r '.height' data.json)

# Convert to metric units
METERS=$(awk "BEGIN {printf \"%.1f\", $HEIGHT / 10}")
KILOS=$(awk "BEGIN {printf \"%.1f\", $WEIGHT / 10}")

# Output
echo "$NAME is of type $TYPE, weighs ${KILOS}kg, and is ${METERS}m tall."
